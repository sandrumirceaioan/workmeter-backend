    "@nestjs/typeorm": "^2.0.0",
    "@nestjs/websockets": "^4.5.8",
    "async": "^2.6.0",
    "body-parser": "^1.18.2",
    "jsonwebtoken": "^8.1.0",
    "jwt-decode": "^2.2.0",
    "jwt-then": "^0.6.0",
    "lodash": "^4.17.4",
    "md5": "^2.2.1",
    "moment": "^2.21.0",
    "mongoose": "^5.0.17",
    "mongoose-hidden": "^1.5.2",
    "mongoose-validator": "^1.3.2",
    "nest-mongoose": "^1.0.4",
    "reflect-metadata": "^0.1.12",
